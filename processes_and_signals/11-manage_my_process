#!/usr/bin/env bash
# Manages the script manage_my_process.
# Usage: manage_my_process {start|stop|restart}

PID_FILE="/var/run/my_process.pid"

if [ "${1}" == "start" ]; then
    if [ -f "$PID_FILE" ]; then
        echo "manage_my_process is already running."
        exit 1
    fi
    # Start the process in the background and capture its PID
    ./manage_my_process &
    echo "$!" > "$PID_FILE"
    echo "manage_my_process started"
elif [ "${1}" == "stop" ]; then
    if [ -f "$PID_FILE" ]; then
        PID=$(cat "$PID_FILE")
        kill "$PID"
        rm "$PID_FILE"  # Delete the PID file
        echo "manage_my_process stopped"
    else
        echo "manage_my_process is not running."
    fi
elif [ "${1}" == "restart" ]; then
    if [ -f "$PID_FILE" ]; then
        PID=$(cat "$PID_FILE")
        kill "$PID"
        rm "$PID_FILE"  # Delete the PID file
    fi
    # Start the process again and capture its PID
    ./manage_my_process &
    echo "$!" > "$PID_FILE"
    echo "manage_my_process restarted"
else
    echo "Usage: manage_my_process {start|stop|restart}"
fi
